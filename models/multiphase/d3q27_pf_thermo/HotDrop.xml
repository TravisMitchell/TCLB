<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/" permissive="true">
	<!-- MODEL: d3q27_pf_thermocapillary
     First test of temp field
	Created: 17/04/2020
     	Responsible: @TravisMitchell
-->
	<Geometry nx="128" ny="321" nz="128">
		<MRT>
			<Box/>
		</MRT>
        <None name="droplet">
            <OffgridSphere R="20" x="64" y="160" z="64"/>
        </None>
		<Wall mask="ALL" name="BottomWall">
			<Box ny="1"/>
		</Wall>
		<Wall mask="ALL" name="TopWall">
			<Box dy="-1"/>
		</Wall>
	</Geometry>
	<Model>
		<Param name="Density_h"     value="1"/>
    	<Param name="Density_l"     value="1"/>
		<Param name="Viscosity_h"   value="0.2"/>
		<Param name="Viscosity_l"   value="0.2"/>
		<Param name="sigma"         value="2.5e-3"/>
		<Param name="M"             value="0.05"/>
		<Param name="IntWidth"      value="4"/>
		<Param name="PhaseField"    value="0.0"/>
		<Param name="PhaseField"    value="1.0" zone="droplet"/>
        <Param name="T_init"        value="16"/>
		<Param name="T_ref"        	value="16"/>
		<Param name="dT"			value="0.1"/>
		<Param name="sigma_T" 		value="-1e-4"/>
		<Param name="T_init"        value="0" zone="BottomWall"/>
        <Param name="T_init"        value="16" zone="droplet"/>
		<Param name="T_init"        value="32" zone="TopWall"/>
        <Param name="cp_h"          value="1"/>
        <Param name="cp_l"			value="1"/>
        <Param name="k_h" 			value="0.2"/>
        <Param name="k_l" 			value="0.2"/>
	</Model>
	<Init/>
	<Container>
		<Stop TempChangeBelow="1e-3" Times="2" Iterations="1000"/>
		<RunAction name="TempToSteadyState"  Iterations="100000"/>
	</Container>
	<VTK what="PhaseField,U,T,P"/>
	<Failcheck nx="10"	Iterations="5"/>
	<Solve 		Iterations="20000">
		<VTK 	Iterations="1000" what="PhaseField,U,T,P" />
		<Log	Iterations="20"/>
	</Solve>
</CLBConfig>
