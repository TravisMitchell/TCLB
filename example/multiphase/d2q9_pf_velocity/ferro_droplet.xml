
<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/ferro_droplet/">
<!-- 
	Model:	d2q9_pf_velocity_ferro
		Can also be run with d2q9_pf_velocity_CM if the collision type is changed.

	This is the test case from Yos et al. (2019) - Journal of Computational Physics
	Density ratio:10
	Viscosity ratio: 6.324555
	Eotvos number = 100
	Reynolds = 10
	t* = 3750

   Created: 	14-08-2017 
    By:		T.Mitchell
-->
<Geometry nx="512.00" ny="512.00" >
	<MRT><Box /></MRT>
	<Wall mask="ALL">
	    <Box   ny="1"  />
	    <Box   dy="-1" />
	</Wall> 
	<North name="North">
	    <Box dy="-1"/>
	</North>
	<South name="South">
	    <Box ny="1"/>
	</South>
	<West name="West">
	    <Box nx="1"/>
	</West>
	<East name="East">
	    <Box dx="-1"/>
	</East>
</Geometry>
<Model>
	<Param name="Density_h" value="1.000000" />    
	<Param name="Density_l" value="0.100000" />    

	<Param name="Viscosity_h" value="0.265271" />    
	<Param name="Viscosity_l" value="0.419430" />    

	<Param name="PhaseField_h" value="1" />    
	<Param name="PhaseField_l" value="0" />    
	<Param name="PhaseField_init"   value="1" />    

	<Param name="Radius"   value="30.0000" />
	<Param name="CenterX"  value="256.0000" />
	<Param name="CenterY"  value="256.0000" />
	<Param name="BubbleType"  value="1" />

	<Param name="M"     value="0.0560" />   
	<Param name="W"     value="4.0960" /> 
	<Param name="sigma" value="0.00076355" />

	<Param name="mu_1" value = "1.000000" />
	<Param name="mu_2" value = "3.000000" />
	<Param name="mu_0" value = "1.000000"/>

	<Param name="Hy_far" value="0.050000"/>
	<Param name="Hx_far" value="0.0000"/>

	<Param name="relaxation" value="0.4"/>

	<Param name="BuoyancyY" value="0.00000" />
</Model>

<VTK />
<Container>
	<Stop DiffBBelow="1e-2" Times="2" Iterations="500"/>
	<Log Iterations="500"/>
	<RunAction name="MagToSteadyState" Iterations="10000"/>
</Container>
<VTK />
<Solve Iterations="10000.000000">
	<VTK Iterations="1000" />
	<Failcheck Iterations="500.000000"/>
	<Log Iterations = "100"/>
</Solve>
</CLBConfig>
